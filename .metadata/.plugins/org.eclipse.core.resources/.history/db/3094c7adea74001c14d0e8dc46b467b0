<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.koreate.board.dao.BoardDAO">

	<insert id="create" parameterType="net.koreate.board.model.Board">
		INSERT INTO tbl_board(title,content,writer) VALUES(#{title},#{content},#{writer})
	</insert>
	
	<select id="read" parameterType="int" resultType="board">
		SELECT * FROM tbl_board WHERE bno = #{bno}
	</select>
	
	<update id="update" parameterType="board">
		UPDATE tbl_board SET title = #{title}, content = #{content} WHERE bno = #{bno}
	</update>
	
	<delete id="delete" parameterType="int">
		DELETE FROM tbl_board WHERE bno = #{bno}
	</delete>
	
	<select id="listAll" resultType="board">
		SELECT * FROM tbl_board ORDER BY bno DESC
	</select>
	
	<update id="updateCnt" parametereType="int">
		UPDATE tbl_board SET viewcnt = viewcnt + 1 WHERE bno = #{bno}
	</update>
</mapper>
  